@model Book

<div class="container py-5" style="max-width: 800px;">

    <div class="card shadow-lg border-0 rounded-3">

        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">

            <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Edit Book </h4>

            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>

        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">

                @* Hidden Id *@
                <input type="hidden" asp-for="Id" />

                @* Title Field *@
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold"></label>
                    <input asp-for="Title" class="form-control" placeholder="Enter book title" />
                    <span asp-validation-for="Title" class="text-danger small"></span>
                </div>

                @* Author *@
                <div class="mb-3">
                    <label asp-for="Author" class="form-label fw-bold"></label>
                    <input asp-for="Author" class="form-control" placeholder="Enter author name" />
                    <span asp-validation-for="Author" class="text-danger small"></span>
                </div>

                @* Price *@
                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-bold"></label>
                    <input asp-for="Price" class="form-control" placeholder="Enter price (e.g. 15.99)" />
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                @* Description *@
                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold"></label>
                    <textarea asp-for="Description" rows="3" class="form-control" placeholder="Enter book description"></textarea>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-warning text-dark px-4">
                        <i class="bi bi-save"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
