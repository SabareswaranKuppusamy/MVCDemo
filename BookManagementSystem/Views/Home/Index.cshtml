@model List<Book>


<div class="container p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0"> Books Store   </h2>
        <a asp-action = "Create" class="btn btn-primary "> Add Book </a>
    </div>

    <input id="searchBox" class="form-control mb-3" placeholder="Search By Title" />

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th class="text-end">Price</th>
                    <th>Description</th>
                    <th style="width:150px">Actions</th>
                </tr>
            </thead>
            <tbody id="bookTable">
                @foreach(var book in Model)
                {
                    <tr>
                        <td data-field="title">@book.Title</td>
                        <td data-field="author">@book.Author</td>
                        <td class="text-end">@book.Price.ToString("0.00")</td>
                        <td data-field="description">@book.Description</td>
                        <td>
                            <a asp-action="Edit" class="btn btn-sm btn-warning "  asp-route-id = "@book.Id">Edit</a>
                            <a asp-action="Delete" class="btn btn-sm btn-danger ms-2 " asp-route-id="@book.Id" >Delete</a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav aria-label="AppNavBar"  class="d-flex justify-content-end">
        <ul id="pager" class="pagination">
        </ul>
    </nav>

</div>


@section Scripts {

    <script>
        
        const pageSize = 5;
        let currentPage = 1;

        const $search = document.getElementById('searchBox');
        const $rows = Array.from(document.querySelectorAll('#bookTable tr'));
        const $pager = document.getElementById('pager');

        function matchesFilter(tr, term) 
        {
            const title = tr.querySelector('[data-field="title"]').textContent.toLowerCase();
            const author = tr.querySelector('[data-field="author"]').textContent.toLowerCase();
            return title.includes(term) || author.includes(term);
        }

        function filteredRows() 
        {
            const term = $search.value.trim().toLowerCase();
            return $rows.filter(r => matchesFilter(r, term));
        }

        function render() 
        {
            $rows.forEach(r => r.style.display = 'none');
             
            const filtered = filteredRows();
            const totalPage = Math.max(1, Math.ceil(filtered.length / pageSize));

            if (currentPage > totalPage) {
                currentPage = totalPage;
            }

            const startIndex = (currentPage - 1) * pageSize;
             
            filtered.slice(startIndex, startIndex + pageSize)
                .forEach(r => r.style.display = '');

            $pager.innerHTML = '';

            // Previous Page
            const previousPage = document.createElement("li");
            previousPage.classList.add("page-item");
            previousPage.classList.toggle('disabled', currentPage === 1);
            previousPage.innerHTML = `<a class="page-link" href="#" aria-label="Previous"><span aria-hidden="true">&laquo;</span></a>`;
            previousPage.addEventListener('click', function (e) {
                e.preventDefault();
                if (currentPage > 1) {
                    currentPage--;
                    render();
                }
            });
            $pager.appendChild(previousPage);

            // Next Page
            const nextPage = document.createElement("li");
            nextPage.classList.add("page-item");
            nextPage.classList.toggle('disabled', currentPage === totalPage);
            nextPage.innerHTML = `<a class="page-link" href="#" aria-label="Next"><span aria-hidden="true">&raquo;</span></a>`;
            nextPage.addEventListener('click', function (e) {
                e.preventDefault();
                if (currentPage < totalPage) {
                    currentPage++;
                    render();
                }
            });

            $pager.appendChild(nextPage);
        }

        $search.addEventListener('input', () => { currentPage = 1; render(); });

        window.addEventListener('DOMContentLoaded', render);

    </script>
}